!!! 5
%html
  %head
    %title Mareva
    = stylesheet_link_tag 'application', media: "all", "date-turbolinks-track" => true
    = javascript_include_tag 'application', "data-turbolinks-track" => true
    = csrf_meta_tags

  %body
    = render 'layouts/header'
    %div.container
      %section#content
        -if notice
          %p.notification.notice=notice
        -if alert
          %p.notification.alert=alert
        = yield
      -if content_for?(:sidebar)
        %section#sidebar
          = yield :sidebar
    = render 'layouts/footer'
